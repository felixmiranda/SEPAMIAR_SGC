@model SEPAMIAR_SGC.Models.CardioInfo

@{
	ViewBag.Title = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 75vh; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Editar Resultado de Cardiología</u></h3>

		<div>
			@using (Html.BeginForm("Edit", "CardioInfo", new { @clientId = ViewBag.clientId }, FormMethod.Post, new { @enctype = "multipart/form-data" }))
			{
				@Html.AntiForgeryToken()

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(m => m.id)

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.cardiologia_aprobacion)
					</div>
					<div class="col-3">
						@Html.EnumDropDownListFor(m => m.cardiologia_aprobacion, htmlAttributes: new { @class = "form-control search mar-0" })
					</div>
				</div>
				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.presion_arterial_diastolica)
					</div>
					<div class="col-3">
						@Html.EditorFor(m => m.presion_arterial_diastolica, new { htmlAttributes = new { @class = "form-control search mar-0" } })
					</div>
				</div>
				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.presion_arterial_sistolica)
					</div>
					<div class="col-3">
						@Html.EditorFor(m => m.presion_arterial_sistolica, new { htmlAttributes = new { @class = "form-control search mar-0" } })
					</div>
				</div>
				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.fecha)
					</div>
					<div class="col-3">
						@{
							ViewBag.fecha = Model.fecha.ToShortDateString();
						}
						<input type="text" name="fecha" value="@ViewBag.fecha" class="form-control search mar-0 datepicker" />
					</div>
				</div>
				<div class="text-center">
					<input type="submit" value="Guardar" class="btn btn-default" style="z-index:0;" />
				</div>
			}
		</div>
	</div>
</div>

