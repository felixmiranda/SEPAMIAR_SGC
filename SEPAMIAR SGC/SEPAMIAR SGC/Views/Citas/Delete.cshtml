@model SEPAMIAR_SGC.Models.citas

@{
	ViewBag.Title = "Eliminar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Eliminar Cita</u></h3>

		<h4>¿Estás seguro que quieres eliminar esto?</h4>

		@Html.HiddenFor(m => m.id)

		<div class="row mar-bot-15 mar-bot-15">
			<div class="col-3">
				@Html.DisplayNameFor(model => model.clientes.codigo)
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.clientes.codigo)
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				@Html.DisplayNameFor(model => model.clientes.nombres)
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.clientes.nombres)
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				Programa
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.programas.nombre)
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				Fecha de Cita
			</div>

			@{ 
				ViewBag.date = Model.fecha.ToShortDateString();
			}

			<div class="col-6">
				@ViewBag.date
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				Hora de Cita
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.hora)
			</div>
		</div>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="row mar-top-30">
				<div class="col-3"></div>

				<div class="col-6">
					<input type="submit" value="Eliminar" class="btn btn-default" />
				</div>
			</div>
		}
	</div>
</div>