@model SEPAMIAR_SGC.Models.congelamiento_semanas

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px;">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title"><u>Registrar Dias de Congelamiento</u></h3>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="row negative">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="col-12 mar-bot-15 bg-title">
					Dias de congelamiento por rango de semanas
				</div>

				<div class="col-7 mar-bot-15">
					@Html.EditorFor(model => model.desde, new { htmlAttributes = new { @class = "form-control search mar-0", placeholder = "Semanas Desde" } })
					@Html.ValidationMessageFor(model => model.desde, "", new { @class = "text-danger" })
				</div>

				<div class="col-7 mar-bot-15">
					@Html.EditorFor(model => model.hasta, new { htmlAttributes = new { @class = "form-control search mar-0", placeholder = "Semanas Hasta" } })
					@Html.ValidationMessageFor(model => model.hasta, "", new { @class = "text-danger" })
				</div>

				<div class="col-7 mar-bot-15">
					@Html.EditorFor(model => model.cantidad_dias, new { htmlAttributes = new { @class = "form-control search mar-0", placeholder = "Dias de Congelamiento" } })
					@Html.ValidationMessageFor(model => model.cantidad_dias, "", new { @class = "text-danger" })
				</div>				
			</div>
			<div class="text-center">
				<input type="submit" value="Crear" class="btn btn-default"/>
			</div>
		}
		
	</div>
</div>