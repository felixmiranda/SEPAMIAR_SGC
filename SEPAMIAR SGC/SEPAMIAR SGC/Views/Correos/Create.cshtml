@model SEPAMIAR_SGC.Models.correos

@{
	ViewBag.Title = "Crear Plantillas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 75vh; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Crear Plantilla de Correo</u></h3>

		<div>
			@using (Html.BeginForm("Create", "Correos", FormMethod.Post, new { @enctype = "multipart/form-data" }))
			{
				@Html.AntiForgeryToken()

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.NombreMail)
					</div>
					<div class="col-9">
						@Html.TextBoxFor(m => m.NombreMail, htmlAttributes: new { @class = "form-control search mar-0" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.Asunto)
					</div>
					<div class="col-9">
						@Html.TextBoxFor(m => m.Asunto, htmlAttributes: new { @class = "form-control search mar-0" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(m => m.Contenido)
					</div>
					<div class="col-9">
						@Html.TextAreaFor(m => m.Contenido, htmlAttributes: new { @class = "form-control mail search mar-0", rows = "10" })
					</div>
				</div>

				<div class="text-center">
					<input type="submit" value="Crear" class="btn btn-default" style="z-index:0;" />
				</div>
			}
		</div>
	</div>
</div>