@model SEPAMIAR_SGC.Models.horarios

@{
	ViewBag.Title = "Crear";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Registrar Horario</u></h3>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.sala_id)
					</div>
					<div class="col-6">
						@Html.DropDownList("sala_id", null, htmlAttributes: new { @class = "form-control search mar-0" })
						@Html.ValidationMessageFor(model => model.sala_id, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.programa_id)
					</div>
					<div class="col-6">
						@Html.DropDownList("programa_id", null, htmlAttributes: new { @class = "form-control search mar-0" })
						@Html.ValidationMessageFor(model => model.programa_id, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.lunes)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.lunes)
							@Html.ValidationMessageFor(model => model.lunes, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.martes)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.martes)
							@Html.ValidationMessageFor(model => model.martes, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.miercoles)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.miercoles)
							@Html.ValidationMessageFor(model => model.miercoles, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.jueves)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.jueves)
							@Html.ValidationMessageFor(model => model.jueves, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.viernes)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.viernes)
							@Html.ValidationMessageFor(model => model.viernes, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.sabado)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.sabado)
							@Html.ValidationMessageFor(model => model.sabado, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.domingo)
					</div>
					<div class="col-6">
						<div class="checkbox">
							@Html.EditorFor(model => model.domingo)
							@Html.ValidationMessageFor(model => model.domingo, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.hora)
					</div>
					<div class="col-6">
						@Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control search mar-0", placeholder = "d.hh:mm:ss" } })
						@Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3"></div>
					<div class="col-6">
						<button type="submit" class="btn btn-default">Registrar</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>
