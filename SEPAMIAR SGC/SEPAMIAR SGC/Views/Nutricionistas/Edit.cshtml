@model SEPAMIAR_SGC.Models.nutricionistas

@{
	ViewBag.Title = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Editar Nutricionista</u></h3>

		@using (Html.BeginForm("Edit", "Nutricionistas", FormMethod.Post, new { @enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(m=>m.created_at)

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.usuario_id)
					</div>

					<div class="col-3">
						@Html.DropDownList("usuario_id", null, htmlAttributes: new { @class = "form-control search mar-0" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.jefe)
					</div>

					<div class="col-3">
						@Html.EditorFor(model => model.jefe, new { htmlAttributes = new { @class = "form-control search mar-0", @required = "required" } })
					</div>
				</div>

				<div class="text-center">
					<input type="submit" value="Guardar" class="btn btn-default" style="z-index:0;" />
				</div>
			</div>
		}
	</div>
</div>
