@section modal
{
	<div id="search-in-clientes" class="overlay">
		<div class="model">
			@using (Html.BeginForm("SearchClientLabResults", "LaboratorioResultados"))
			{
				<h3 class="title">
					<u>Buscar Resultados de cliente</u>
				</h3>

				<input type="text" name="Value" class="form-control mar-bot-15" placeholder="Ingrese código de cliente" />

				<div class="text-right">
					<button type="submit" class="btn btn-default btn-small">Buscar Resultados</button>
					<button type="button" class="btn btn-default btn-small btn-cancel">Cancelar</button>
				</div>
			}
		</div>
	</div>
	<div id="search-in-clientes-cardio" class="overlay">
		<div class="model">
			@using (Html.BeginForm("SearchClientCardioResults", "CardioInfo"))
			{
				<h3 class="title">
					<u>Buscar Resultados de cliente</u>
				</h3>

				<input type="text" name="Value" class="form-control mar-bot-15" placeholder="Ingrese código de cliente" />

				<div class="text-right">
					<button type="submit" class="btn btn-default btn-small">Buscar Resultados</button>
					<button type="button" class="btn btn-default btn-small btn-cancel">Cancelar</button>
				</div>
			}
		</div>
	</div>
<div id="search-in-clientes-pym" class="overlay">
	<div class="model">
		@using (Html.BeginForm("GetRegistriesForClient", "PesosMedidas"))
		{
			<h3 class="title">
				<u>Buscar Pesos y Medidas de cliente</u>
			</h3>

				<input type="text" name="value" class="form-control mar-bot-15" placeholder="Ingrese código de cliente" />

				<div class="text-right">
					<button type="submit" class="btn btn-default btn-small">Buscar Registros</button>
					<button type="button" class="btn btn-default btn-small btn-cancel">Cancelar</button>
				</div>
		}
	</div>
