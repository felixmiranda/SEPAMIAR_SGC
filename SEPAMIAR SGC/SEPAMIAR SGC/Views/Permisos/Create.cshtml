@model SEPAMIAR_SGC.Models.permisos

@{
	ViewBag.Title = "Crear";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
	<div class="card" style="max-height: 500px;">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title"><u>Creación de Permiso</u></h3>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.codigo_interno, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.EditorFor(model => model.codigo_interno, new { htmlAttributes = new { @class = "form-control search mar-0" } })
						@Html.ValidationMessageFor(model => model.codigo_interno, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control search mar-0" } })
						@Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Crear" class="btn btn-default" />
					</div>
				</div>
			</div>
		}
