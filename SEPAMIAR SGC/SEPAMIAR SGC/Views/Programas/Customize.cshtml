@model SEPAMIAR_SGC.Models.programas

@{
    ViewBag.Title = "Editar Información App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Editar Información App</u></h3>

		@using(Html.BeginForm("Customize", "Programas", FormMethod.Post, new { @enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.id)
				@Html.HiddenFor(model => model.created_at)

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.nombre)
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0 search mar-0 search mar-0", @readonly = "readonly" } })
						@Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.semanas, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.semanas, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "number", @readonly = "readonly" } })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.frase, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.frase, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "text" } })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.TextAreaFor(model => model.descripcion, htmlAttributes: new { @class = "form-control search mar-0 search mar-0", @style = "resize: none;", @lines = "6" })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.fuerza, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.fuerza, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "number" } })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.resistencia, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.resistencia, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "number" } })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.intensidad, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						@Html.EditorFor(model => model.intensidad, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "number" } })
						@Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						<input type="file" name="pricipal" value="Seleccionar imagen principal" required />
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.icono, htmlAttributes: new { @class = "control-label col-md-2" })
					</div>

					<div class="col-6">
						<input type="file" name="icono" value="Seleccionar ícono principal" required/>
					</div>
				</div>

				<div class="text-center mar-bot-15">
					<input type="submit" value="Crear" class="btn btn-default" style="z-index:0;" />
				</div>
			</div>
		}
	</div>
</div>