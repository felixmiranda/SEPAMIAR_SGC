@model SEPAMIAR_SGC.Models.programas

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

        <h3 class="title mar-bot-30"><u>Eliminar Programa</u></h3>
        
        <h4>¿Estás seguro que quieres eliminar esto?</h4>

        <div class="row mar-bot-15 mar-bot-15">
            <div class="col-3">
                @Html.DisplayNameFor(model => model.nombre)
            </div>

            <div class="col-6">
                @Html.DisplayFor(model => model.nombre)
            </div>
        </div>

        <div class="row mar-bot-15">
            <div class="col-3">
                @Html.DisplayNameFor(model => model.semanas)
            </div>

            <div class="col-6">
                @Html.DisplayFor(model => model.semanas)
            </div>
        </div>

        <div class="row mar-bot-15">
            <div class="col-3">
                @Html.DisplayNameFor(model => model.created_at)
            </div>

            <div class="col-6">
                @Html.DisplayFor(model => model.created_at)
            </div>
        </div>

        <div class="row mar-bot-15">
            <div class="col-3">
                @Html.DisplayNameFor(model => model.updated_at)
            </div>

            <div class="col-6">
                @Html.DisplayFor(model => model.updated_at)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row mar-top-30">
                <div class="col-3"></div>

                <div class="col-6">
                    <input type="submit" value="Eliminar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>