@model SEPAMIAR_SGC.Models.programas

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card" style="max-height: 500px; overflow: auto">
        @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

        <h3 class="title mar-bot-30"><u>Registrar Programa</u></h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)
				@Html.HiddenFor(model => model.created_at)

                <div class="row mar-bot-15">
                    <div class="col-3">
                        @Html.LabelFor(model => model.nombre)
                    </div>

                    <div class="col-6">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0 search mar-0 search mar-0" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mar-bot-15">
                    <div class="col-3">
                        @Html.LabelFor(model => model.semanas, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>

                    <div class="col-6">
                        @Html.EditorFor(model => model.semanas, new { htmlAttributes = new { @class = "form-control search mar-0 search mar-0", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.semanas, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mar-top-30">
                    <div class="col-3"></div>
                    <div class="col-6">
                        <input type="submit" value="Guardar Cambios" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>