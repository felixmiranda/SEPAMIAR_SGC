@model SEPAMIAR_SGC.Models.salas

@{
	ViewBag.Title = "Detalles";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Detalles de la Sala</u></h3>

		<div class="row mar-bot-15">
			<div class="col-3">
				@Html.DisplayNameFor(model => model.local.nombre)
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.local.nombre)
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				@Html.DisplayNameFor(model => model.local.distrito)
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.local.distrito)
			</div>
		</div>

		<div class="row mar-bot-15">
			<div class="col-3">
				@Html.DisplayNameFor(model => model.nombre)
			</div>

			<div class="col-6">
				@Html.DisplayFor(model => model.nombre)
			</div>
		</div>

		<div class="row mar-top-30">
			<div class="col-3"></div>

			<div class="col-6">
				@Html.ActionLink("Editar Sala", "Edit", new { id = Model.id }, new { @class = "btn btn-default mar-rig-10" })
				@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-default mar-rig-10" })
			</div>
		</div>
	</div>
</div>
