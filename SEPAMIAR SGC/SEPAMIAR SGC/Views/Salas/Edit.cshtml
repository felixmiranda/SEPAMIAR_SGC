@model SEPAMIAR_SGC.Models.salas

@{
	ViewBag.Title = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Registrar Sala</u></h3>

		@using (Html.BeginForm("Edit", "Salas", FormMethod.Post, new { @enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(model => model.id)
			@Html.HiddenFor(model => model.created_at)
			@Html.HiddenFor(model => model.updated_at)

			<div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.local_id)
					</div>
					<div class="col-6">
						@Html.DropDownList("local_id", null, htmlAttributes: new { @class = "form-control search mar-0" })
						@Html.ValidationMessageFor(model => model.local_id, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.nombre)
					</div>
					<div class="col-6">
						@Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control search mar-0" } })
						@Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3"></div>
					<div class="col-6">
						<button type="submit" class="btn btn-default">Guardar</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>