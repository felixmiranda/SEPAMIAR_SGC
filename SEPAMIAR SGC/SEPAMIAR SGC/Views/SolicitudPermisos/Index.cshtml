@model IEnumerable<SEPAMIAR_SGC.Models.solicitud_permisos>

@{
	ViewBag.Title = "Solicitudes de Aprobación";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card">
		<h3 class="title">
			<u>Solicitudes de Aprobación</u>
		</h3>
		<table class="table">
			<tr>
				<th width="20%" class="text-left">
					@Html.Label("","Aprobador")
				</th>
				<th width="20%" class="text-left">
					@Html.Label("","Solicitante")
				</th>
				<th width="20%" class="text-left">
					@Html.DisplayNameFor(model => model.modelo_nombre)
				</th>
				<th width="5%" class="text-left">
					@Html.DisplayNameFor(model => model.modelo_id)
				</th>
				<th width="5%" class="text-left">
					@Html.Label("","Aprobado")
				</th>
				<th width="15%" class="text-left">
					@Html.DisplayNameFor(model => model.created_at)
				</th>
				<th width="15%" class="text-left">
					@Html.DisplayNameFor(model => model.updated_at)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.jefe.email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.solicitante.email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.modelo_nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.modelo_id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.autorizado)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.created_at)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.updated_at)
					</td>
				</tr>
			}
		</table>
	</div>
</div>