@model SEPAMIAR_SGC.Models.usuario_permisos

@{
	ViewBag.Title = "Crear";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px; overflow: auto">
		@Html.ActionLink("Atrás", "Index", new { v= ViewBag.UserInfo.id }, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title mar-bot-30"><u>Asignar permiso - @ViewBag.UserInfo.email</u></h3>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.usuario_id)
					</div>
					<div class="col-6">
						<input type="text" name="usuario_id" value="@ViewBag.UserInfo.id" class="form-control search mar-0" readonly="readonly" />
						@Html.ValidationMessageFor(model => model.usuario_id, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3">
						@Html.LabelFor(model => model.permiso_id)
					</div>
					<div class="col-6">
						@Html.DropDownList("permiso_id", null, htmlAttributes: new { @class = "form-control search mar-0" })
						@Html.ValidationMessageFor(model => model.permiso_id, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					<div class="col-3"></div>

					<div class="col-6">
						<input type="submit" value="Crear" class="btn btn-default" />
					</div>
				</div>
			</div>
		}
	</div>
</div>
