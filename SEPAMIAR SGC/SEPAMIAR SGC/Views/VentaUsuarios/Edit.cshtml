@model SEPAMIAR_SGC.Models.venta_usuarios

@{
	ViewBag.Title = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="card" style="max-height: 500px;">
		@Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-small btn-default pull-right mar-top-10" })

		<h3 class="title"><u>Registrar Nro. Documento</u></h3>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.id)
			@Html.HiddenFor(m=>m.cliente_id)

			<div class="row mar-bot-15">
				@Html.Label("Cod. Vendedor", htmlAttributes: new { @class = "col-3" })
				<div class="col-6">
					@Html.DisplayFor(model => model.vendedor_id, new { htmlAttributes = new { @class = "form-control search mar-0" } })
				</div>
			</div>

			<div class="row mar-bot-15">
				@Html.LabelFor(model => model.tipo_ingreso, htmlAttributes: new { @class = "col-3" })
				<div class="col-6">
					@Html.DisplayFor(model => model.tipo_ingreso, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.numero_boleta, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.EditorFor(model => model.numero_boleta, new { htmlAttributes = new { @class = "form-control search mar-0" } })
						@Html.ValidationMessageFor(model => model.numero_boleta, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.tipo_pago, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.DisplayFor(model => model.tipo_pago, new { htmlAttributes = new { @class = "form-control" } })
					</div>
				</div>

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.DisplayFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.monto, "", new { htmlAttributes = new { @class = "form-control" } })
					</div>
				</div>

				<div class="row mar-bot-15">
					@Html.LabelFor(model => model.created_at, htmlAttributes: new { @class = "col-3" })
					<div class="col-9">
						@Html.DisplayFor(model => model.created_at, new { htmlAttributes = new { @class = "form-control" } })
					</div>
				</div>

				<div class="text-center mar-bot-15">
					<input type="submit" value="Guardar" class="btn btn-default" />
				</div>
		}
	</div>
</div>
