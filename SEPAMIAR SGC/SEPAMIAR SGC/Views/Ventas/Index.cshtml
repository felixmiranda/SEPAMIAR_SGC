
@{
	ViewBag.Title = "Ventas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-5">
			<div class="card">
				@using (Html.BeginForm("GetClient", "Clientes"))
			{
					<h3 class="title">
						<u>Buscar cliente</u>
					</h3>

					<input type="text" name="Value" class="form-control search mar-bot-15" placeholder="Ingrese código del cliente" />

					<div class="text-right">
						<button type="submit" class="btn btn-default">Buscar cliente</button>
					</div>
			}
			</div>
		</div>
		<div class="col-7">
			<div class="card">
				<h3 class="title">
					<u>Accesos Rápidos</u>
				</h3>
				@Html.ActionLink("Registrar Cliente", "Create", null, new { @data_role = "modal", @data_target = "#search-in-prospectos", @class = "btn btn-default" })
				<a href="@Url.Action("Create","Prospectos")" class="btn btn-default">Registrar Prospecto</a>
				@Html.ActionLink("Renovar Cliente", "Create", null, new { @data_role = "modal", @data_target = "#search-in-clientes", @class = "btn btn-default" })
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Prospectos")" class="flex-center">
					<img src="@Url.Content("~/Images/prospects.png")" height="35" width="35" class="mar-rig-10" />
					<span>Prospectos</span>
				</a>
			</div>
		</div>
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Clientes")" class="flex-center">
					<img src="@Url.Content("~/Images/clients.png")" height="35" width="35" class="mar-rig-10" />
					<span>Clientes</span>
				</a>
			</div>
		</div>
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "VentaUsuarios")" class="flex-center">
					<img src="@Url.Content("~/Images/sales.png")" height="35" width="35" class="mar-rig-10" />
					<span>Venta a cliente</span>
				</a>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Horarios")" class="flex-center">
					<img src="@Url.Content("~/Images/calendar.png")" width="35" height="35" class="mar-rig-10" />
					<span>Horarios</span>
				</a>
			</div>
		</div>
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Programas")" class="flex-center">
					<img src="@Url.Content("~/Images/programs.png")" width="35" height="35" class="mar-rig-10" />
					<span>Programas</span>
				</a>
			</div>
		</div>
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Reportes")" class="flex-center">
					<img src="@Url.Content("~/Images/icon-reports.png")" width="35" height="35" class="mar-rig-10" />
					<span>Reportes</span>
				</a>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-4">
			<div class="card">
				<a href="@Url.Action("Index", "Correos")" class="flex-center">
					<img src="@Url.Content("~/Images/icon-mail.png")" width="35" height="35" class="mar-rig-10" />
					<span>Mail Center</span>
				</a>
			</div>
		</div>
	</div>
</div>

@section modal
{
	<div id="search-in-prospectos" class="overlay">
		<div class="model">
			@using (Html.BeginForm("SearchProspect", "Prospectos"))
			{
				<h3 class="title">
					<u>Buscar prospecto</u>
				</h3>

				<input type="text" name="Value" class="form-control mar-bot-15" placeholder="Ingrese E-mail o Documento de identidad" />

				<div class="text-right">
					<button type="submit" class="btn btn-default btn-small">Buscar prospecto</button>
					<button type="button" class="btn btn-default btn-small btn-cancel">Cancelar</button>
				</div>
			}
		</div>
	</div>
	<div id="search-in-clientes" class="overlay">
		<div class="model">
			@using (Html.BeginForm("RenewClient", "Clientes"))
			{
				<h3 class="title">
					<u>Buscar Cliente</u>
				</h3>

				<input type="text" name="Value" class="form-control mar-bot-15" placeholder="Ingrese código de cliente" />

				<div class="text-right">
					<button type="submit" class="btn btn-default btn-small">Buscar cliente</button>
					<button type="button" class="btn btn-default btn-small btn-cancel">Cancelar</button>
				</div>
			}
		</div>
	</div>

}