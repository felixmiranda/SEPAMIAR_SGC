        <div class="row mar-bot-15">
            <div class="col-3">
                @Html.DisplayNameFor(model => model.updated_at)
            </div>

            <div class="col-6">
                @Html.DisplayFor(model => model.updated_at)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-center">
                <input type="submit" value="Eliminar" class="btn btn-small btn-default mar-rig-10" />
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-small btn-default" })
            </div>
        }
    </div>
</div>
